# OdorDiff-2 Environment Configuration Template
# Copy this file to .env.development, .env.staging, or .env.production

# Environment settings
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Dashboard Configuration  
DASHBOARD_PORT=8050
DASHBOARD_HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/odordiff2
DATABASE_POOL_SIZE=10
DATABASE_POOL_MAX_OVERFLOW=20

# Cache Configuration
CACHE_BACKEND=redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Model Configuration
MODEL_DEVICE=cpu
MODEL_MAX_WORKERS=4
MODEL_BATCH_SIZE=8
MODEL_CACHE_ENABLED=true

# Safety Configuration
SAFETY_TOXICITY_THRESHOLD=0.1
SAFETY_IRRITANT_CHECK=true
SAFETY_ECO_THRESHOLD=0.3
SAFETY_IFRA_COMPLIANCE=true

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8050"]
CORS_ALLOW_CREDENTIALS=true

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_FILE_EXTENSIONS=["json", "csv", "txt"]

# Monitoring Configuration
PROMETHEUS_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_TIMEOUT=30

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/odordiff2.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# External Services
WANDB_API_KEY=your-wandb-key-optional
OPENAI_API_KEY=your-openai-key-optional

# Development Settings
DEV_RELOAD=true
DEV_DEBUG_TOOLBAR=true
DEV_PROFILING=false

# Production Settings (for .env.production)
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=warning
# API_RELOAD=false
# DATABASE_SSL_REQUIRE=true
# SECURE_HEADERS=true